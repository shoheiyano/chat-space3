.side-bar
  .side-bar__top
    .side-bar__top__list
      .side-bar__top__list__user-name
        = current_user.name
      .side-bar__top__list__icon-lists
        .left-icon
          = link_to new_group_path do
            = icon("fas", "edit")
        .right-icon
          = link_to edit_user_path(current_user) do
            = icon("fas", "cog")
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message